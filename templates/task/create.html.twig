{% extends "base.html.twig" %}

{% block body %}
    <div class="container my-5">
        {{ form_start(form) }}
            {% if app.request.get("_route") == "create_task" %}
                <h3 class="p-2">Créer une nouvelle tâche</h3>
            {% else %}
                <h3 class="p-2">Modifier la tâche : {{ task.title }}</h3>
            {% endif %}
            {{ form_label(form.title, "Nom de la tâche", {"label_attr": {"class": "p-2"}}) }}
            {{ form_row(form.title) }}
            {% if app.request.get("_route") == "create_task" %}
                <input type="submit" value="Créer" class="btn btn-success mx-2 my-5" />
            {% else %}
                <input type="submit" value="Modifier" class="btn btn-warning mx-2 my-5" />
            {% endif %}
        {{ form_end(form) }}
    </div>
{% endblock %}